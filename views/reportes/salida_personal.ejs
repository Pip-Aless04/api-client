<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" id="appIcon" type="image/x-icon" href="https://cms.blumewebsites.com/pops/website/favicon.png">
    <link rel="stylesheet" href="../../css/reportes/salida_personal.css">
    <title>Salida de personal</title>
</head>
<body>
    <header>
        <nav>
            <div class="logo">
                <a href="/dhcoapp/inicio">
                    <img src="../../img/logo_pops_2024.webp" alt="POPS Logo">
                </a>
            </div>
            <div class="settings-menu">
                <div class="settings-icon" id="settingsIcon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                    </svg>
                </div>
                <div class="dropdown" id="settingsDropdown">
                    <a href="#">Perfil</a>
                    <a href="#">Configuración</a>
                    <a href="#">Cerrar sesión</a>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <div class="form-container">
            <div class="form-header">
                <h1>Reporte salida de personal regional</h1>
                <p>Por favor, complete el formulario para reportar una salida de personal.</p>
            </div>
            <form class="form-content" id="incidentForm">
                <div class="search-container">
                    <input list="search-options" class="search-bar" id="searchBar" placeholder="Buscar colaborador...">
                    <datalist id="search-options">
                        <% if (Array.isArray(userSubordinados.info)) { %>
                            <% userSubordinados.info.forEach(subordinado => { %>
                                <option value="<%= subordinado.nombre %> <%= subordinado.segundo_nombre %> <%= subordinado.primer_apellido %> <%= subordinado.segundo_apellido %>"></option>
                            <% }); %>
                        <% } else { %>
                            <option value="No se encontraron colaboradores"></option>
                        <% } %>
                    </datalist>
                </div>              
                <div class="form-row">
                    <div class="form-group">
                        <label for="correo">Correo</label>
                        <input type="email" id="correo" name="correo" placeholder=" " disabled>
                    </div>
                    <div class="form-group">
                        <label for="pais">País</label>
                        <input type="text" id="pais" name="pais" placeholder=" " disabled>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="ident">Identificación</label>
                        <input type="text" id="ident" name="ident" placeholder="" disabled>
                    </div>
                    <div class="form-group">
                        <label for="name">Nombre</label>
                        <input type="text" id="name" name="name" placeholder="" disabled>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="name">Departamento / Heladería</label>
                        <input type="text" id="area" name="area" placeholder="" disabled>
                    </div>
                    <div class="form-group">
                        <label for="jefe">Jefe inmediato</label>
                        <input type="text" id="jefe" name="jefe" placeholder="" disabled>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="puesto">Puesto</label>
                        <input type="text" id="puesto" name="puesto" placeholder="" disabled>
                    </div>
                    <div class="form-group">
                        <label for="date">Fecha de salida</label>
                        <input type="date" id="date" name="date" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label class="radio-label">Tipo de salida</label>
                        <div class="radio-group">
                            <div class="radio-option">
                                <input type="radio" id="tipo-renuncia" name="tipo-salida" value="renuncia">
                                <label for="tipo-renuncia">Renuncia</label>
                            </div>
                            <div class="radio-option">
                                <input type="radio" id="tipo-abandono" name="tipo-salida" value="abandono" checked>
                                <label for="tipo-abandono">Abandono de trabajo</label>
                            </div>
                            <div class="radio-option">
                                <input type="radio" id="tipo-fallecimiento" name="tipo-salida" value="fallecimiento">
                                <label for="tipo-fallecimiento">Fallecimiento</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="radio-label">Motivo de salida</label>
                        <div class="radio-group">
                            <div class="radio-option">
                                <input type="radio" id="motivo-renuncia" name="motivo-salida" value="renuncia">
                                <label for="motivo-renuncia">Renuncia</label>
                            </div>
                            <div class="radio-option">
                                <input type="radio" id="motivo-abandono" name="motivo-salida" value="abandono" checked>
                                <label for="motivo-abandono">Abandono de trabajo</label>
                            </div>
                            <div class="radio-option">
                                <input type="radio" id="motivo-fallecimiento" name="motivo-salida" value="fallecimiento">
                                <label for="motivo-fallecimiento">Fallecimiento</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group" style="flex: 1 1 100%;">
                        <label>Adjuntar archivos (Un archivo por entrada)</label>
                        <div class="file-inputs-container">
                            <div class="file-input-wrapper">
                                <input type="file" id="file-upload-1" name="file-upload-1">
                                <label for="file-upload-1" class="file-input-button">Carta autorización de pago</label>
                                <div class="file-input-name" id="file-input-name-1">Seleccione un archivo</div>
                            </div>
                            <div class="file-input-wrapper">
                                <input type="file" id="file-upload-2" name="file-upload-2">
                                <label for="file-upload-2" class="file-input-button">Comprobante de entrega de uniformes</label>
                                <div class="file-input-name" id="file-input-name-2">Seleccione un archivo</div>
                            </div>
                            <div class="file-input-wrapper">
                                <input type="file" id="file-upload-3" name="file-upload-3">
                                <label for="file-upload-3" class="file-input-button">Fotografía de la identificación</label>
                                <div class="file-input-name" id="file-input-name-3">Seleccione un archivo</div>
                            </div>
                            <div class="file-input-wrapper">
                                <input type="file" id="file-upload-4" name="file-upload-4">
                                <label for="file-upload-4" class="file-input-button">Carta de despido o renuncia</label>
                                <div class="file-input-name" id="file-input-name-4">Seleccione un archivo</div>
                            </div>
                        </div>
                    </div>
                </div>
                <% if (user.pais === 'Nicaragua') { %>
                <div class="form-row">
                    <div class="form-group" style="flex: 1 1 100%;">
                        <label for="vacaciones">Saldo de Vacaciones (solo se muestra si el colaborador es de Nicaragua)</label>
                        <input type="text" id="vacaciones" name="vacaciones" placeholder="Tu respuesta">
                    </div>
                </div>
                <% } %>
                <button type="submit">Enviar reporte</button>
            </form>
        </div>
    </main>

    <footer>
        <div class="footer-content">
            <img src="../../img/footer.webp" alt="Decorative footer with waves">
        </div>
    </footer>

</body>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchBar = document.getElementById('searchBar');
        const emailField = document.getElementById('correo');
        const paisField = document.getElementById('pais');
        const identField = document.getElementById('ident');
        const nameField = document.getElementById('name');
        const areaField = document.getElementById('area');
        const jefeField = document.getElementById('jefe');
        const puestoField = document.getElementById('puesto');
  
        // Asegúrate de que `userSubordinados` sea definido
        const subordinados = '<%= JSON.stringify(userSubordinados.info || []) %>';
  
        searchBar.addEventListener('change', function () {
            const selectedName = searchBar.value.trim().toLowerCase();
  
            const matchedSubordinado = subordinados.find(sub => {
                const fullName = `${sub.nombre} ${sub.segundo_nombre || ''} ${sub.primer_apellido} ${sub.segundo_apellido || ''}`.trim().toLowerCase();
                return fullName === selectedName;
            });
  
            if (matchedSubordinado) {
                // Completar campos
                emailField.value = matchedSubordinado.email || '';
                paisField.value = matchedSubordinado.pais || '';
                identField.value = matchedSubordinado.identificacion || '';
                nameField.value = `${matchedSubordinado.nombre} ${matchedSubordinado.segundo_nombre || ''} ${matchedSubordinado.primer_apellido} ${matchedSubordinado.segundo_apellido || ''}`.trim();
                areaField.value = matchedSubordinado.departamento || '';
                jefeField.value = matchedSubordinado.nombre_jefe || '';
                puestoField.value = matchedSubordinado.puesto || '';
            } else {
                // Limpiar campos si no hay coincidencia
                emailField.value = '';
                paisField.value = '';
                identField.value = '';
                nameField.value = '';
                areaField.value = '';
                jefeField.value = '';
                puestoField.value = '';
            }
        });
    });
  </script>  
</html>